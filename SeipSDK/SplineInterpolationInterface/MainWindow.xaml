<Window x:Class="SplineInterpolationInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplineInterpolationInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MouseLeftButtonDown="OnAddPointToCanvas"  MouseLeftButtonUp="OnReleasePoint" >
    <Grid MouseMove="OnMouseMove">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="275*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="417*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="myCanvas" Margin="10,0,0,0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="1" />
        <Button x:Name="btnCreateSplineFunction" Content="Button" Grid.Column="2" Margin="4,2,0,0" Grid.Row="2" Grid.ColumnSpan="1" Click="btnCreateSplineFunction_Click"/>

    </Grid>
</Window>
